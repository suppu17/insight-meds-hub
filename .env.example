# AWS Bedrock Configuration for Claude AI
# Get these from your AWS Console: https://console.aws.amazon.com/iam/
VITE_AWS_ACCESS_KEY_ID=your_aws_access_key_here
VITE_AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
VITE_AWS_REGION=us-east-1

# AWS S3 Configuration for Video Storage
# Create an S3 bucket for storing generated videos
VITE_AWS_S3_BUCKET_NAME=your_s3_bucket_name_here

# fal.ai API Key for Video and Image Generation
# Get this from: https://fal.ai/dashboard
VITE_FAL_API_KEY=your_fal_api_key_here

# Gladia API Configuration for Voice Transcription
# Get your API key from: https://gladia.io/
VITE_GLADIA_API_KEY=your_gladia_api_key_here

# Bright Data Configuration for Enhanced Drug Information
# Get your API key from: https://brightdata.com/
# If not provided, will fallback to TigerData API for comprehensive data collection
VITE_BRIGHT_DATA_API_KEY=your_bright_data_api_key_here
VITE_BRIGHT_DATA_ENDPOINT=https://api.brightdata.com/datasets/v1/trigger

# TigerData Configuration for Comprehensive Data Collection
# Advanced data collection and analysis platform
VITE_TIGER_DATA_API_KEY=01K5FVEAW4KJ0YEDFKFY7Y7E47
VITE_TIGER_DATA_BASE_URL=https://api.tigerdata.com
VITE_TIGER_DATA_ENABLE_LOGGING=true
VITE_TIGER_DATA_ENABLE_HISTORY=true

# Video Processing Configuration
VITE_VIDEO_QUALITY_DEFAULT=medium
VITE_VIDEO_FORMAT_DEFAULT=mp4
VITE_S3_UPLOAD_ENABLED=true
VITE_S3_PRESIGNED_URL_EXPIRATION_MINUTES=60

# Note: In production, never expose these keys in the frontend
# Use a backend proxy server to make API calls securely